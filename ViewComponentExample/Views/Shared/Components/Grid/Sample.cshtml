@{
}

<div class="box">
    <h3>@ViewBag.Grid.Title</h3>
    <table class="table w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Person person in ViewBag.Grid.Persons)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.JobTitle</td>
                </tr>
            }
        </tbody>
    </table>
</div>
