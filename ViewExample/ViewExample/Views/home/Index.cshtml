@using ViewExample.Models
@model IEnumerable<Person>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewData["title"]</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="page-content">
        <h1>Welcome</h1>
        @{
            List<Person>? people = (List<Person>?)ViewData["people"];
        }
        @foreach (var person in Model)
        {
            <div class="box float-left w-50">
                <h1> @person.PersonName</h1>
                <table class="table w-100">
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>@person.PersonName</td>
                        </tr>
                        @if (person.DOB != null)
                        {
                            <tr>
                                <td>DOB</td>
                                <td>@person.DOB</td>
                            </tr>
                        }
                        <tr>
                            <td>Gender</td>
                            <td>@person.Gender</td>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <a href="/person-details/@person.PersonName">Details</a>
                </div>
                <div>
                    <a href="/person-with-product">Person With Product</a>
                </div>

            </div>
        }
    </div>
</body>
</html>