@using ViewExample.Models
@{
    var pageTitle = "View Example Title";
    List<Person> people = new List<Person>()
    {
            new Person()
            {
                PersonName = "Ram",
                DOB = Convert.ToDateTime("2002/12/12"),
                Gender =  "Male"
            },
            new Person()
            {
                PersonName = "Shyam",
                //DOB = Convert.ToDateTime("2000/02/11"),
                Gender =  "Male"
            },
            new Person()
            {
                PersonName = "Sita",
                DOB = Convert.ToDateTime("2001/05/09"),
                Gender =  "Female"
            }

    };
}
 @functions{
    int? GetAge(DateTime? DateOfBirth)
    {
        if (DateOfBirth != null)
        {
            return(int)((DateTime.Now - DateOfBirth).Value.TotalDays / 365.25);
        }
        return null;
    }
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@pageTitle</title>
</head>
<body>
    <h1>Welcome</h1>
    @for (int i = 0; i < 3; i++)
    {
        var person = people[i];
        <span>@person.PersonName</span>
        <span>,</span>
        <span>@person.Gender</span>
        @if (person.DOB.HasValue)
        {
            <span>@GetAge(person.DOB) years old</span>
        }
        <h1></h1>
    }
</body>
</html>